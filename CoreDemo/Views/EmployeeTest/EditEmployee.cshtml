@model CoreDemo.Controllers.Class1


@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Api ile Personel güncelleme sayfası</h1>

<form method="post">
    <label>ID</label>
    @Html.TextAreaFor(x => x.ID, new { @class = "form-control" })
    <br />
    <label>Personel</label>
    @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })
    <br />

    <button type="submit" class="btn btn-outline-success">Güncelle</button>


</form>